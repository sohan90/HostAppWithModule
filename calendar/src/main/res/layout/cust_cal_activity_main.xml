<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

<RelativeLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sohan.customcalender.ui.LandingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/light_blue" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/toolbar"
        android:layout_alignBottom="@id/toolbar"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_keyboard_backspace_24" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/arrow"
        android:layout_alignTop="@id/toolbar"
        android:layout_alignBottom="@id/toolbar"
        android:layout_toEndOf="@id/arrow"
        android:gravity="center"
        android:text="@string/calendar"
        android:textColor="@android:color/black"
        tools:ignore="RelativeOverlap" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/stateSelectionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/toolbar"
        android:layout_alignBottom="@id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/header"
        android:layout_marginStart="5dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:gravity="center|end"
        android:text="------"
        android:padding="5dp"
        android:textColor="@android:color/black" />

    <com.example.sohan.customcalender.ui.CustomCalendarView
        android:id="@+id/calenderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar" />

    <View
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:layout_below="@id/calenderView"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:background="@android:color/darker_gray" />


    <androidx.cardview.widget.CardView
        android:id="@+id/holidayCardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/calenderView"
        android:layout_margin="10dp"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@android:color/white"
        android:animateLayoutChanges="true"
        app:cardElevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/onthisday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:text="@string/on_this_day" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/holidayDateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/onthisday"
                android:layout_alignStart="@id/holiday_background"
                android:layout_alignEnd="@id/holiday_background"
                android:layout_alignTop="@id/holiday_background"
                android:layout_alignBottom="@id/holiday_background"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="14"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/under_line"
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_below="@id/holidayDateTxt"
                android:layout_alignStart="@id/holiday_background"
                android:layout_alignEnd="@id/holiday_background"
                android:layout_marginStart="8dp"
                android:layout_marginTop="-6dp"
                android:layout_marginEnd="7dp"
                android:background="@android:color/holo_red_dark"
                android:visibility="visible" />

            <View
                android:id="@+id/holiday_background"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_below="@id/onthisday"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/holiday_drawable"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/holidayReasonTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/onthisday"
                android:layout_alignTop="@id/holiday_background"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/holiday_background"
                android:gravity="center"
                android:text="-----------------"
                android:textColor="@android:color/black" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ad_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/holidayCardView"
        android:layout_margin="10dp"
        android:visibility="visible"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/adImg"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:src="@drawable/ad"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</FrameLayout>