<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="35dp">

    <View
        android:id="@+id/today_background"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/today_drawable"
        android:visibility="visible" />

    <View
        android:id="@+id/holiday_background"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/holiday_drawable"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/cus_cal_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/holiday_background"
        android:layout_alignEnd="@id/holiday_background"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="30"
        android:textSize="16sp"
        android:textColor="@color/cus_black_color" />

    <View
        android:id="@+id/cus_cal_under_line"
        android:layout_width="20dp"
        android:layout_height="1dp"
        android:layout_below="@id/cus_cal_days"
        android:layout_alignStart="@id/holiday_background"
        android:layout_alignEnd="@id/holiday_background"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/holo_red_dark"
        android:visibility="visible" />

</RelativeLayout>